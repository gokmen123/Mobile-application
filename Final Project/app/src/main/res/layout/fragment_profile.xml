<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.midtermproject.Profile"
    android:id="@+id/profileFragment"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"

                />
            <TextView
                android:id="@+id/username_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:hint="UserName"
                android:textSize="20dp"

                android:background="@drawable/border"
                android:paddingLeft="10dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/name_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Name"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/surname_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Surname"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/birthday_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="BirthDay"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"
                 />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/education_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Education"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/email_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="E-Mail"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/gender_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Gender"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/phone_prof"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="PhoneNo"
                android:textSize="20dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>